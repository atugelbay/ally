FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the webhooks service
RUN go build -o webhooks ./services/webhooks/cmd/webhooks

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary
COPY --from=builder /app/webhooks .

# Expose port
EXPOSE 9090

# Run the webhooks service
CMD ["./webhooks"]
